{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Debug App",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceRoot}/target/debug/anki-english-generator.exe",
      "args": [
        "-l", "a1",
        "-t", "technology",
        "-w", "${workspaceRoot}/.vscode/data/words.txt"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "environment": [
        { "name": "RUSTFLAGS", "value": "-Awarnings" },
        { "name": "RUST_BACKTRACE", "value": "0" },
      ],
      "console": "internalConsole",
      "preLaunchTask": "cargo-build-app",
    },
    {
      "name": "(Windows) Debug Tests",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/deps/anki_english_generator-c671eee1ac430a98.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "internalConsole",
      "preLaunchTask": "cargo-build-test",
    },
  ]
}